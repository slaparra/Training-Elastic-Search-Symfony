<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Atrapalo\Domain\Model\Artist\Entity\Artist"
            table="Artist">
        <!-- Indexes -->
        <unique-constraints>
            <unique-constraint name="IPK_Artist" columns="ArtistId"/>
        </unique-constraints>

        <id name="id" type="integer" column="ArtistId">
            <generator strategy="IDENTITY"/>
        </id>
        <field name="name" type="string" column="Name" length="120" nullable="true" />

        <!-- Relations -->
        <one-to-many target-entity="Atrapalo\Domain\Model\Album\Entity\Album" mapped-by="artist" field="albums">
            <cascade>
                <cascade-persist />
            </cascade>
        </one-to-many>
    </entity>

</doctrine-mapping>
