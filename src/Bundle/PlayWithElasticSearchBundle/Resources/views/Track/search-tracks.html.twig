{% extends "PlayWithElasticSearchBundle:Playlists:base.html.twig" %}

{% block title "Available Tracks" %}

{% block page_header_title "Search Tracks"|capitalize %}
{% block page_header_subtitle "available" %}

{% block content %}

    <form class="form-inline">
        <div class="form-group">
            <label for="exampleInputName2">Album title</label>
            <input type="text" class="form-control" id="album_title" name="album_title" value="{{ album_title }}" placeholder="AcÃºstico, Jagged little pill...">
        </div>
        <div class="form-group">
            <label for="exampleInputEmail2">With Track</label>
            <input type="text" class="form-control" id="track_name" name="track_name" value="{{ track_name }}" placeholder="Fast As a Shark, Snowballed...">
        </div>
        <div class="form-group">
            <label for="exampleInputEmail2">Composer</label>
            <input type="text" class="form-control" id="composer" name="composer" value="{{ composer }}" placeholder="Alanis Morissette, Malcolm Young, Brian Johnson...">
        </div>
        <button type="submit" class="btn btn-primary">Filter</button>
    </form>
    <hr />
    <table class="table table-striped table-bordered">
        <thead>
        <tr>
            <th>ID</th>
            <th>Track name</th>
            <th>Composer</th>
            <th>Album</th>
            <th>Genre</th>
        </tr>
        </thead>
        <tbody>
        {% for track in tracks %}
            <tr>
                <td>{{ track.id }}</td>
                <td><a href="{{ path("app_track", { "trackId": track.id }) }}"><strong>{{ track.name }}</strong></a></td>
                <td>{{ track.composer }}</td>
                <td>{{ track.album.title }}</td>
                <td>{{ track.genre.name }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <nav>
        <ul class="pagination">
            <li>
                <a href="#" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>
            <li><a href="#">1</a></li>
            <li><a href="#">2</a></li>
            <li><a href="#">3</a></li>
            <li><a href="#">4</a></li>
            <li><a href="#">5</a></li>
            <li>
                <a href="#" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        </ul>
    </nav>
{% endblock %}